<% content_for :header, 'Sign up for a free account on the QLAQ forums.' %>

<%= form_for :user, :url => users_path do |f| -%>

  <%= render '/refinery/admin/error_messages', :object => @user, :include_object_name => true %>

  <div class='field'>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :birthday %>
    You must be 13-25 to sign up. Please enter your birthday as "YYYY-MM-DD"
    <%= f.text_field :birthday, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :secret_code %>
    Membership is by invite only, ask an existing member for the code.
    <%= f.text_field :secret_code, :class => 'larger widest' %>
  </div>


  <%= render '/refinery/admin/form_actions', :f => f,
             :submit_continue => false,
             :submit_button_text => t('sign_up', :scope => 'refinery.users.new'),
             :hide_delete => true,
             :hide_cancel => true %>
<% end -%>